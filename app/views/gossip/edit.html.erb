<!-- Content title -->
<h2 class="display-4 text-center my-3"></h2>

<!-- Flash message -->
<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row justify-content-center">
  <div class="col-6">
    <%= form_tag url_for(action: 'update'), method: "patch" do %>
      <div class="form-group">
        <%= label_tag 'Titre :' %>
        <%= text_field_tag 'title', @gossip.title, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Contenu :' %>
        <%= text_area_tag 'content', @gossip.content, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= label_tag 'Auteur :' %>
        <%= select_tag "user", options_from_collection_for_select(User.all, :id, :full_name), {class: 'form-control' } %>
      </div>
      <div class="row justify-content-center">
          <%= submit_tag "Editer le potin", {class: 'btn btn-primary'} %>
      </div>
    <% end %>
  </div>
</div>